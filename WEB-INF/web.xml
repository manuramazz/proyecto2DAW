<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
"http://java.sun.com/j2ee/dtds/web-app_2_3.dtd">

<web-app>
  <!-- AddToCartServlet -->
  <servlet>
    <servlet-name>AnhadirItem</servlet-name>
    <servlet-class>minitienda.AnhadirItemServlet</servlet-class> 
  </servlet>
  <servlet-mapping>
    <servlet-name>AnhadirItem</servlet-name>
    <url-pattern>/AnhadirItem</url-pattern>
  </servlet-mapping>

  <!-- ViewCartServlet -->
  <servlet>
    <servlet-name>VistaCarrito</servlet-name>
    <servlet-class>minitienda.VistaCarritoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>VistaCarrito</servlet-name>
    <url-pattern>/VistaCarrito</url-pattern> 
  </servlet-mapping>

  <!-- RemoveItemServlet -->
  <servlet>
    <servlet-name>EliminarItem</servlet-name>
    <servlet-class>minitienda.EliminarItemServlet</servlet-class> 
  </servlet>
  <servlet-mapping>
    <servlet-name>EliminarItem</servlet-name>
    <url-pattern>/EliminarItem</url-pattern> 
  </servlet-mapping>

  <!-- CheckoutServlet -->
  <servlet>
    <servlet-name>Checkout</servlet-name>
    <servlet-class>minitienda.CheckoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Checkout</servlet-name>
    <url-pattern>/Checkout</url-pattern>
  </servlet-mapping>
</web-app>